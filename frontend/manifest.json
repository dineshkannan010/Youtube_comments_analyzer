{
    "manifest_version": 3,
    "name": "YouTube Comments Analyzer",
    "version": "1.0",
    "description": "Analyzes YouTube video comments for sentiment.",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost/*",
        "https://www.googleapis.com/*"
    ]
  }